}

<h1>Apagar</h1>

<h3>Tem a certeza que deseja apagar isto?</h3>
<div>
    <h4>Jogadores</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IDRegisto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IDRegisto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Utilizador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Utilizador.Email)
        </dd>
        <dt class = "col-sm-2">
