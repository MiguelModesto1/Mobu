@model IEnumerable<mobu_backend.Models.Salas_Chat>

@{
    ViewData["Title"] = "Índice";
}

<h1>Índice</h1>

<p>
    <a asp-action="Create">Criar Sala de Chat</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDSala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeSala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeGrupo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDSala)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeSala)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeGrupo)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IDSala">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IDSala">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.IDSala">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
