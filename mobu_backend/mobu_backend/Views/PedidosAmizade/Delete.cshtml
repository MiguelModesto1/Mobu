@model mobu_backend.Models.PedidosAmizade

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar</h1>

<h3>Tem a certeza que deseja apagar isto?</h3>
<div>
    <h4>Pedidos de amizade</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DonoListaPedidos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DonoListaPedidos.NomeUtilizador)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Remetente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Remetente.NomeUtilizador)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPedido" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
