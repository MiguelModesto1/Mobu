@model mobu_backend.Models.RegistadosSalasChat

@inject IHttpContextAccessor http

@{
    ViewData["Title"] = "Detalhes";

    var request = http.HttpContext.Request;
}

<h1>Detalhes</h1>

<div>
    <h4>Registados nas Salas de Chat</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IDRegisto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IDRegisto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Utilizador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Utilizador.NomeUtilizador)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sala)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sala.NomeSala)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAdmin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAdmin)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilizador.NomeFotografia)
            <img style="height:75px;" src=@("https://" + request.Host.ToString() + "/imagens/" + Model.Utilizador.NomeFotografia) />    @*DisplayFor(modelItem => item.Fotografia)*@
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Voltar à lista</a>
</div>
