@model mobu_backend.Models.Amigo

@inject mobu_backend.Data.ApplicationDbContext context

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar</h1>

<h3>Tem a certeza que deseja apagar isto?</h3>
<div>
    <h4>Amigo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IDAmizade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IDAmizade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonoListaAmigos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonoListaAmigos.NomeUtilizador)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IDAmigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IDAmigo)
        </dd>
        <dt class="col-sm-2">
            Amigo/a
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => context.UtilizadorRegistado
            .Where(u => u.IDUtilizador == model.IDAmigo)
            .Select(u => u.NomeUtilizador)
            .ToArray()[0])
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bloqueado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bloqueado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IDAmigo" />
        <input type="hidden" asp-for="DonoListaFK" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
