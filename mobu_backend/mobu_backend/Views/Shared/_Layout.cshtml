<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mobu backoffice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mobu_backend.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @Html.ActionLink("Mobu backoffice", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">@Html.ActionLink("Mensagens","Index","Mensagem", new {area = ""}, new {@class = "nav-link text-dark"})</li>
                        <li class="nav-item">@Html.ActionLink("Pedidos Amizade","Index","Pedidos_Amizade", new {area = ""}, new {@class = "nav-link text-dark"})</li>
                        <li class="nav-item">@Html.ActionLink("Registados Salas Chat","Index","Registados_Salas_Chat", new {area = ""}, new {@class = "nav-link text-dark"})</li>
                        <li class="nav-item">@Html.ActionLink("Registados Salas Jogo","Index","Registados_Salas_Jogo", new {area = ""}, new {@class = "nav-link text-dark"})</li>
                        <li class="nav-item">@Html.ActionLink("Salas Jogo","Index","Sala_Jogo_1_Contra_1", new {area = ""}, new {@class = "nav-link text-dark"})</li>
                        <li class="nav-item">@Html.ActionLink("Salas Chat","Index","Salas_Chat", new {area = ""}, new {@class = "nav-link text-dark"})</li>
                        <li class="nav-item">@Html.ActionLink("Registados","Index","Utilizador_Registado", new {area = ""}, new {@class = "nav-link text-dark"})</li>
                        <li class="nav-item">@Html.ActionLink("Anónimos","Index","Utilizador_Anonimo", new {area = ""}, new {@class = "nav-link text-dark"})</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - mobu_backend - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
