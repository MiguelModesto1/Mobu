@model mobu_backend.Models.Amizade

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Amizade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAmizade" />
            <div class="form-group">
                <label asp-for="DonoListaAmigosFK" class="control-label"></label>
                <select asp-for="DonoListaAmigosFK" class="form-control" asp-items="ViewBag.DonoListaAmigosFK"></select>
                <span asp-validation-for="DonoListaAmigosFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmigoFK" class="control-label"></label>
                <select asp-for="AmigoFK" class="form-control" asp-items="ViewBag.AmigoFK"></select>
                <span asp-validation-for="AmigoFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
