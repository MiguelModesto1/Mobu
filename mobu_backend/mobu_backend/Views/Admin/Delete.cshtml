@model mobu_backend.Models.Admin

@inject IHttpContextAccessor http;

@{
    ViewData["Title"] = "Apagar";
    var request = http.HttpContext.Request;
}

<h1>Apagar</h1>

<h3>Tem a certeza que deseja apagar isto?</h3>
<div>
    <h4>Administrador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IDAdmin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IDAdmin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeAdmin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeAdmin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>
        <dd class = "col-sm-10">
            <img style="height:75px;" src=@("https://" + request.Host.ToString() + "/imagens/" + Model.Fotografia.NomeFicheiro) />    @*DisplayFor(modelItem => item.Fotografia)*@
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IDAdmin" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
