@model mobu_backend.Models.Admin

@inject IHttpContextAccessor http;

@{
    ViewData["Title"] = "Detalhes";
    var request = http.HttpContext.Request;
}

<h1>Detalhes</h1>

<div>
    <h4>Administrador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IDAdmin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IDAdmin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeAdmin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeAdmin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>
        <dd class = "col-sm-10">
            <img style="height:75px;" src=@("https://" + request.Host.ToString() + "/imagens/" + Model.Fotografia.NomeFicheiro) />    @*DisplayFor(modelItem => item.Fotografia)*@
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IDAdmin">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>
